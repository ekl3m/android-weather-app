<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view_locations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Wyszukiwarka -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_background"
                android:padding="8dp">

                <!-- EditText -->
                <EditText
                    android:id="@+id/input_search_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Wpisz nazwÄ™ miasta"
                    android:textColor="@android:color/white"
                    android:textColorHint="#88FFFFFF"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp" />

                <!-- Ikona lupy -->
                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center_vertical"
                    android:src="@drawable/ic_magnifying_glass"
                    app:tint="#88FFFFFF" />

                <!-- Przycisk X -->
                <ImageView
                    android:id="@+id/icon_clear"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_x_circle_fill"
                    app:tint="#88FFFFFF"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Anuluj -->
            <TextView
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anuluj"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Propozycje lokalizacji -->
        <LinearLayout
            android:id="@+id/suggestions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Zapisane lokalizacje -->
        <LinearLayout
            android:id="@+id/saved_locations_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:text="Zapisane lokalizacje"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/saved_locations_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>