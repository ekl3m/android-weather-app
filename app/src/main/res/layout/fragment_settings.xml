<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingBottom="30dp"
    android:id="@+id/root">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        card_view:cardCornerRadius="24dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/transparent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/bg_blur_dark">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Nagłówek sekcji jednostek -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jednostki"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center" />

                <!-- Temperatura -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperatura"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/radio_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_temp_celsius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°C"
                        android:checked="true"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />

                    <RadioButton
                        android:id="@+id/radio_temp_fahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°F"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />
                </RadioGroup>

                <!-- Wiatr -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wiatr"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/radio_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_wind_ms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="m/s"
                        android:checked="true"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />

                    <RadioButton
                        android:id="@+id/radio_wind_kmh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />

                    <RadioButton
                        android:id="@+id/radio_wind_mph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mph"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />
                </RadioGroup>

                <!-- Ciśnienie -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciśnienie"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/radio_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_pressure_hpa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hPa"
                        android:checked="true"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />

                    <RadioButton
                        android:id="@+id/radio_pressure_mmHg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mmHg"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />
                </RadioGroup>

                <!-- Widoczność -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Widoczność"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/radio_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_visibility_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:checked="true"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />

                    <RadioButton
                        android:id="@+id/radio_visibility_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mil"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        app:buttonTint="@color/white" />
                </RadioGroup>

                <!-- Inne opcje -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inne opcje"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_dev_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ustawienia deweloperskie "
                    android:textColor="@color/white"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/switch_track_color" />

                <LinearLayout
                    android:id="@+id/dev_settings_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Odświeżanie danych pogodowych -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Odświeżanie danych pogodowych"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="16dp" />

                    <RadioGroup
                        android:id="@+id/radio_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_refresh_auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tryb automatyczny"
                            android:checked="true"
                            android:textColor="@color/white"
                            app:buttonTint="@color/white" />

                        <RadioButton
                            android:id="@+id/radio_refresh_manual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tryb ręczny"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/white"
                            app:buttonTint="@color/white" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Odświeżanie pogody ręcznie"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="16dp" />

                    <ImageButton
                        android:id="@+id/button_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:background="@drawable/rounded_refresh_button"
                        android:src="@drawable/ic_arrow_clockwise"
                        android:alpha="0.75"
                        android:enabled="false"
                        app:tint="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>