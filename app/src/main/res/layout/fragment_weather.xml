<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Nagłówek -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_margin="12dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:text="Warszawa"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="16"
                android:padding="4dp" />

            <RelativeLayout
                android:id="@+id/temp_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_marginTop="-24dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/text_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:text="23"
                    android:textSize="100sp"
                    android:textColor="@color/white"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="32"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/text_temperature_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:text="°"
                    android:textSize="100sp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@id/text_temperature"
                    android:layout_toEndOf="@id/text_temperature"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="12dp"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="32" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:text="Opis pogody"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="16"
                android:layout_marginTop="-14dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Kafelki -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <include layout="@layout/card_hourly_forecast" />
            <include layout="@layout/card_weekly_forecast" />
            <include layout="@layout/card_wind_details" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/card_visibility_details" />
                <include layout="@layout/card_humidity_details" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/card_air_quality_details" />
                <include layout="@layout/card_pressure_details" />
            </LinearLayout>

            <include layout="@layout/card_footer_info" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>